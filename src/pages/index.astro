---
import BaseLayout from '../layouts/BaseLayout.astro';
import nttLogo from '../assets/nttlogo.png';
import capgeminiLogo from '../assets/capgeminilogo.png';
import perfilImg from '../assets/perfil.jpg';
---

<BaseLayout title="Juan Carlos - Desarrollador Full-Stack" description="+3 años de experiencia. Desarrollador Web Full-Stack especializado en crear aplicaciones únicas. De Murcia, España.">
	<!-- Hero Section -->
	<section class="hero">
		<div class="hero-content">
			<div class="profile-image">
				<img src={perfilImg.src} alt="Juan Carlos - Foto de perfil" class="profile-photo" />
			</div>
			<div class="hero-text">
				<h1 class="name">Hola, soy <span class="name-highlight">Juan Carlos</span></h1>
				<div class="availability">
					<span class="status-dot"></span>
					<span class="availability-text">Disponible</span>
				</div>
				<p class="description">
					<strong>+4 años de experiencia.</strong> Desarrollador Web Full-Stack especializado en crear aplicaciones únicas. De Murcia, España.
				</p>
				<div class="contact-links">
					<a href="https://linkedin.com/in/juancarlos" class="contact-link" target="_blank" rel="noopener">
						<svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
							<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
						</svg>
						LinkedIn
					</a>
					<a href="https://github.com/juancarlos" class="contact-link" target="_blank" rel="noopener">
						<svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
							<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
						</svg>
						GitHub
					</a>
					<a href="mailto:dev.jcarlos@gmail.com" class="contact-link">
						<svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
							<path d="M24 5.457v13.909c0 .904-.732 1.636-1.636 1.636h-3.819V11.73L12 16.64l-6.545-4.91v9.273H1.636A1.636 1.636 0 0 1 0 19.366V5.457c0-.904.732-1.636 1.636-1.636h.749L12 10.855 21.615 3.821h.749c.904 0 1.636.732 1.636 1.636z"/>
						</svg>
						Email
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Experience Section -->
	<section class="experience">
		<h2>Experiencia laboral</h2>
		<div class="experience-grid">
			<div class="experience-item current">
				<div class="company-logo">
					<img src={nttLogo.src} alt="NTT DATA logo" class="company-logo-img" />
				</div>
				<div class="experience-content">
					<div class="experience-header">
						<h3>Desarrollador Full-Stack</h3>
						<span class="company">NTT DATA</span>
						<span class="current-badge">Actual</span>
					</div>
					<p class="period">Desde Abril 2022</p>
					<p class="description">
						Desarrollador senior de una importante multinacional trabajando en un proyecto SCRUM con tecnologías FullStack como React, Java, TypeScript y Javascript.
					</p>
					<div class="tech-tags">
						<span class="tech-tag">React</span>
						<span class="tech-tag">Java</span>
						<span class="tech-tag">TypeScript</span>
						<span class="tech-tag">JavaScript</span>
						<span class="tech-tag">SCRUM</span>
					</div>
				</div>
			</div>

			<div class="experience-item">
				<div class="company-logo">
					<img src={capgeminiLogo.src} alt="Capgemini logo" class="company-logo-img" />
				</div>
				<div class="experience-content">
					<div class="experience-header">
						<h3>Desarrollador Full-Stack</h3>
						<span class="company">Capgemini</span>
					</div>
					<p class="period">Junio 2021- Abril 2022</p>
					<p class="description">
						Desarrollador FullStack trabajando en equipo con tecnologías como Spring Boot y React.
					</p>
					<div class="tech-tags">
						<span class="tech-tag">Spring Boot</span>
						<span class="tech-tag">React</span>
					</div>
				</div>
			</div>
		</div>
	</section>
</BaseLayout>

<style>
	/* Hero Section */
	.hero {
		margin-bottom: 4rem;
	}

	.hero-content {
		display: flex;
		align-items: center;
		gap: 3rem;
		margin-bottom: 2rem;
	}

	.profile-image {
		flex-shrink: 0;
	}

	.profile-photo {
		width: 120px;
		height: 120px;
		border-radius: 50%;
		object-fit: cover;
		border: 4px solid rgba(255, 255, 255, 0.1);
		box-shadow: 0 8px 32px rgba(0, 55, 42, 0.3);
		transition: all 0.3s ease;
	}

	.profile-photo:hover {
		transform: scale(1.05);
		box-shadow: 0 12px 40px rgba(0, 55, 42, 0.4);
	}

	.hero-text {
		flex: 1;
	}

	.name {
		margin: 0 0 1rem 0;
		font-size: 2.5rem;
		color: rgb(var(--gray-dark));
		font-family: 'Lora', serif;
		font-weight: 700;
	}

	.name-highlight {
		font-style: italic;
		position: relative;
		display: inline-block;
	}

	.name-highlight::after {
		content: '';
		position: absolute;
		bottom: -10px;
		left: 0;
		width: 100%;
		height: 8px;
		background-image: url("data:image/svg+xml,%3csvg width='80' height='8' xmlns='http://www.w3.org/2000/svg'%3e%3cpath d='M0 4 Q10 1 20 4 Q30 7 40 4 Q50 1 60 4 Q70 7 80 4' stroke='%2300372a' stroke-width='3' fill='none'/%3e%3c/svg%3e");
		background-repeat: repeat-x;
		background-size: 80px 8px;
		opacity: 0.7;
		transition: all 0.3s ease;
	}

	.name-highlight:hover::after {
		opacity: 1;
		transform: translateY(-2px);
	}

	.availability {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-bottom: 1.5rem;
		color: rgb(var(--gray));
		font-size: 0.9rem;
		font-weight: 500;
	}

	.availability-text {
		color: #ffbd54;
		font-weight: 600;
	}

	.status-dot {
		width: 8px;
		height: 8px;
		background: #ffbd54;
		border-radius: 50%;
		animation: pulse 2s infinite;
	}

	@keyframes pulse {
		0% {
			box-shadow: 0 0 0 0 rgba(255, 189, 84, 0.7);
		}
		70% {
			box-shadow: 0 0 0 10px rgba(255, 189, 84, 0);
		}
		100% {
			box-shadow: 0 0 0 0 rgba(255, 189, 84, 0);
		}
	}

	.description {
		font-size: 1.1rem;
		line-height: 1.6;
		margin-bottom: 2rem;
		color: rgb(var(--gray-dark));
	}

	.contact-links {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.contact-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.75rem 1.25rem;
		background: rgba(var(--gray-light), 50%);
		border: 1px solid rgba(var(--gray), 20%);
		border-radius: 12px;
		text-decoration: none;
		color: rgb(var(--gray-dark));
		font-weight: 500;
		transition: all 0.2s ease;
		font-size: 0.9rem;
	}

	.contact-link:hover {
		background: rgba(var(--gray-light), 80%);
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(var(--gray), 20%);
		color: rgb(var(--gray-dark));
	}

	/* Experience Section */
	.experience {
		margin-top: 4rem;
	}

	.experience h2 {
		margin-bottom: 2rem;
		color: rgb(var(--gray-dark));
		font-family: 'Lora', serif;
		font-weight: 700;
	}

	.experience-grid {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.experience-item {
		display: flex;
		gap: 1.5rem;
		padding: 2rem;
		background: rgba(255, 255, 255, 0.5);
		border: 1px solid rgba(var(--gray), 15%);
		border-radius: 16px;
		transition: all 0.3s ease;
		position: relative;
	}

	.experience-item:hover {
		transform: translateY(-4px);
		box-shadow: 0 12px 32px rgba(var(--gray), 20%);
		border-color: rgba(var(--gray), 30%);
	}

	.experience-item.current::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 3px;
		background: linear-gradient(90deg, #ffbd54, #ff9800);
		border-radius: 16px 16px 0 0;
	}

	.company-logo {
		flex-shrink: 0;
	}

	.company-logo-img {
		width: 60px;
		height: 60px;
		object-fit: cover;
		border-radius: 12px;
		border: 2px solid rgba(var(--gray), 15%);
		box-shadow: 0 4px 16px rgba(var(--gray), 15%);
		transition: all 0.3s ease;
	}

	.company-logo-img:hover {
		transform: scale(1.05);
		box-shadow: 0 6px 20px rgba(var(--gray), 25%);
		border-color: rgba(var(--gray), 25%);
	}

	.experience-content {
		flex: 1;
	}

	.experience-header {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 0.5rem;
		flex-wrap: wrap;
	}

	.experience-header h3 {
		margin: 0;
		font-size: 1.25rem;
		color: rgb(var(--gray-dark));
		font-family: 'Lora', serif;
		font-weight: 700;
	}

	.company {
		color: rgb(var(--gray));
		font-weight: 500;
		font-size: 1rem;
	}

	.current-badge {
		background: #ffbd54;
		color: white;
		padding: 0.25rem 0.75rem;
		border-radius: 20px;
		font-size: 0.75rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.period {
		color: rgb(var(--gray));
		font-size: 0.9rem;
		margin: 0.5rem 0 1rem 0;
		font-weight: 500;
	}

	.experience-item .description {
		margin-bottom: 1.5rem;
		font-size: 1rem;
		line-height: 1.6;
	}

	.tech-tags {
		display: flex;
		gap: 0.5rem;
		flex-wrap: wrap;
	}

	.tech-tag {
		background: rgba(0, 55, 42, 0.1);
		color: #00372a;
		padding: 0.4rem 0.8rem;
		border-radius: 8px;
		font-size: 0.8rem;
		font-weight: 500;
		border: 1px solid rgba(0, 55, 42, 0.2);
		transition: all 0.2s ease;
	}

	.tech-tag:hover {
		background: rgba(0, 55, 42, 0.15);
		transform: translateY(-1px);
	}

	/* Dark mode styles */
	:global([data-theme="dark"]) .name,
	:global([data-theme="dark"]) .description,
	:global([data-theme="dark"]) .experience h2,
	:global([data-theme="dark"]) .experience-header h3 {
		color: white;
	}

	:global([data-theme="dark"]) .profile-photo {
		border-color: rgba(255, 255, 255, 0.2);
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
	}

	:global([data-theme="dark"]) .profile-photo:hover {
		box-shadow: 0 12px 40px rgba(0, 0, 0, 0.6);
	}

	:global([data-theme="dark"]) .name-highlight::after {
		background-image: url("data:image/svg+xml,%3csvg width='80' height='8' xmlns='http://www.w3.org/2000/svg'%3e%3cpath d='M0 4 Q10 1 20 4 Q30 7 40 4 Q50 1 60 4 Q70 7 80 4' stroke='%23ffbd54' stroke-width='3' fill='none'/%3e%3c/svg%3e");
	}

	:global([data-theme="dark"]) .contact-link {
		background: rgba(255, 255, 255, 0.05);
		border-color: rgba(255, 255, 255, 0.1);
		color: white;
	}

	:global([data-theme="dark"]) .contact-link:hover {
		background: rgba(255, 255, 255, 0.1);
		color: white;
	}

	:global([data-theme="dark"]) .experience-item {
		background: rgba(255, 255, 255, 0.03);
		border-color: rgba(255, 255, 255, 0.1);
	}

	:global([data-theme="dark"]) .experience-item:hover {
		background: rgba(255, 255, 255, 0.05);
		border-color: rgba(255, 255, 255, 0.2);
	}

	:global([data-theme="dark"]) .company-logo-img {
		border-color: rgba(255, 255, 255, 0.2);
		box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
	}

	:global([data-theme="dark"]) .company-logo-img:hover {
		box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
		border-color: rgba(255, 255, 255, 0.3);
	}

	:global([data-theme="dark"]) .tech-tag {
		background: rgba(255, 189, 84, 0.1);
		color: #ffbd54;
		border-color: rgba(255, 189, 84, 0.2);
	}

	:global([data-theme="dark"]) .tech-tag:hover {
		background: rgba(255, 189, 84, 0.15);
	}

	/* Responsive */
	@media (max-width: 768px) {
		.hero-content {
			flex-direction: column;
			text-align: center;
			gap: 2rem;
		}

		.name {
			font-size: 2rem;
		}

		.contact-links {
			justify-content: center;
		}

		.experience-item {
			flex-direction: column;
			gap: 1rem;
			padding: 1.5rem;
		}

		.experience-header {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.5rem;
		}

		.company-logo-img {
			width: 50px;
			height: 50px;
		}

		.profile-photo {
			width: 100px;
			height: 100px;
		}
	}
</style>
